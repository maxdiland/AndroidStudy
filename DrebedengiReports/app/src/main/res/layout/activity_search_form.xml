<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gmail.maxdiland.drebedengireports.activity.SearchFormActivity"
    android:id="@+id/llSearch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llSum"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/etSum"
            android:hint="@string/searchHintSum"
            android:inputType="numberSigned" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sCurrency"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/llSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llCategories"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sMoneyPlace"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sExpensesCategory"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/llCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llDates"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/etFromDate"
            android:hint="@string/searchHintFromDate"
            android:inputType="date" />


        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/etToDate"
            android:hint="@string/searchHintTill"
            android:inputType="date" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etComment"
        android:layout_below="@+id/llDates"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"

        android:hint="@string/searchHintComment" />


</RelativeLayout>
